<!DOCTYPE html><!-- ドキュメントタイプを宣言する(html5) -->
	<head>
		<title>AllThread</title>
		<link rel='stylesheet' href='/stylesheets/style.css' />
	</head>
	<body>
	
		<p>スレッド一覧</p>
		<table border="1" id = "allThread">
			<tr>
				<th>トピック</th>
				<th>投稿者</th>
			</tr>
				<% for (var i=0; i<data.length; i++){ %>
				<tr>
					<td>
						<a href="/oneThread?title=<%= data[i].title %>">
							<%= data[i].title %>
						</a>
					</td>
					<td><%= data[i].user_name %></td>
				</tr>
				<% } %>

		</table>
		
		
		<p>投稿フォーム</p>
		<form method="post" action="/addThread">
			<table border="1">
				<tr>
					<td>スレッド名</td>
					<td><input type="text" name="title"></td>
				</tr>
				<tr>
					<td>名前</td>
					<td><input type="text" name="name"></td>
				</tr>
				<tr>
					<td>内容</td>
					<td><textarea name="comment" cols="25" rows="5"></textarea></td>
				</tr>
				<tr>
					<td></td>
					<td><input type="submit" value="新規スレッド作成"></tr>
			</table>
		</form>
		
		<p>検索</p>
		<form method="post" action="/resultSearch">
			<table border="1">
				<tr>
					<td>キーワード</td>
					<td><input type="text" name="search_word"></td>
					<td><input type="submit" value="検索"></td>
				</tr>
			</table>
		</form>
		
		
	<body>
</html>
